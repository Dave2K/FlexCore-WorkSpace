{
  "$schema": "https://json.schemastore.org/appsettings.json",
  "CacheSettings": {
    "DefaultProvider": "MemoryCache",
    "Providers": [ "Redis", "MemoryCache" ],
    "Redis": {
      "ConnectionString": "localhost:6379",
      "InstanceName": "FlexCoreApp",
      "AbortOnConnectFail": false,
      "ConnectTimeout": 5000,
      "SyncTimeout": 5000
    },
    "MemoryCache": {
      "SizeLimit": 1024,
      "CompactionPercentage": 0.5,
      "ExpirationScanFrequency": "00:05:00"
    }
  },
  "DatabaseSettings": {
    "DefaultProvider": "SQLServer",
    "DefaultConnectionOptions": {
      "CommandTimeout": 60,
      "Pooling": true
    },
    "Providers": [ "SQLServer", "SQLite", "MariaDB" ],
    "ConnectionStrings": {
      "SQLServer": "Server=localhost;Database=MasterDB;User Id=sa;Password=YourStrongPassword;",
      "SQLite": "Data Source=./database.db",
      "MariaDB": "Server=localhost;Port=3306;Database=FlexDB;User=root;Password=mariaPassword;",
      "PostgreSQL": "Host=localhost;Port=5432;Database=FlexDB;Username=postgres;Password=pgPassword"
    },
    "SQLServer": {
      "EnableRetryOnFailure": true,
      "MaxRetryCount": 3,
      "MaxRetryDelay": "00:00:30"
    },
    "SQLite": {
      "JournalMode": "WAL"
    },
    "MariaDB": {
      "Pooling": true
    },
    "PostgreSQL": {
      "MaxPoolSize": 100,
      "CommandTimeout": 30
    }
  },
  "Logging": {
    "DefaultProvider": "Console",
    "Providers": [ "Console", "Log4Net", "Serilog" ],
    "Console": {
      "IncludeScopes": true,
      "LogLevel": {
        "Default": "Information",
        "System": "Warning",
        "Microsoft": "Warning"
      }
    },
    "Log4Net": {
      "ConfigFile": "log4net.config",
      "LogLevel": {
        "Default": "Debug"
      }
    },
    "Serilog": {
      "MinimumLevel": {
        "Default": "Information",
        "Override": {
          "Microsoft": "Warning",
          "System": "Error"
        }
      },
      "WriteTo": [
        { "Name": "Console" },
        {
          "Name": "File",
          "Args": {
            "path": "./logs/log-.txt",
            "rollingInterval": "Day"
          }
        }
      ]
    }
  },
  "ORMSettings": {
    "DefaultProvider": "EFCore",
    "Providers": [ "EFCore", "Dapper", "Dapper", "ADO" ],
    "EFCore": {
      "EnableLazyLoading": false,
      "EnableSensitiveDataLogging": false
    },
    "Dapper": {
      "CommandTimeout": 30
    },
    "ADO": {
      "ConnectionTimeout": 15
    }
  },
  "SecuritySettings": {
    "DefaultProvider": "JWT",
    "Providers": [ "JWT", "OAuth" ],
    "JWT": {
      "SecretKey": "your_super_secret_key_here",
      "Issuer": "FlexCoreApp",
      "Audience": "FlexCoreUsers",
      "ExpiryMinutes": 120
    },
    "OAuth": {
      "Google": {
        "ClientId": "your_google_client_id",
        "ClientSecret": "your_google_secret"
      },
      "Facebook": {
        "ClientId": "your_facebook_app_id",
        "ClientSecret": "your_facebook_app_secret"
      }
    }
  }
}