{
  "DatabaseSettings": {
    "DefaultProvider": "SQLServer",
    "Providers": [ "SQLServer", "SQLite", "MariaDB" ],
    "SQLServer": {
      "ConnectionString0": "Server=192.168.111.137;Database=db_test;User=dev;Password=1234;",
      "ConnectionString": "Server=VIVOBOOK\\SQLEXPRESS;Database=db_test;Trusted_Connection=True;TrustServerCertificate=True;",
      "ConnectionString2": "Server=VIVOBOOK\\SQLSERVER;Database=db_test;User=root;Password=4321;",
      "EnableRetryOnFailure": true,
      "MaxRetryCount": 5,
      "MaxRetryDelay": "00:00:45"
    },
    "SQLite": {
      "ConnectionString": "Data Source={TempFolder}/db_test.db;Version=3;",
      "JournalMode": "WAL",
      "Synchronous": "NORMAL"
    },
    "MariaDB": {
      "ConnectionString": "Server=172.30.62.107;Port=3306;Database=db_test;User=dev;Password=1234;",
      "Pooling": true
    }
  },
  "ORMSettings": {
    "DefaultProvider": "EFCore",
    "Providers": [ "EFCore", "Dapper", "ADO" ],
    "EFCore": {
      "EnableLazyLoading": false,
      "EnableSensitiveDataLogging": false
    },
    "Dapper": {
      "CommandTimeout": 30
    },
    "ADO": {
      "ConnectionTimeout": 15
    }
  },
  "CacheSettings": {
    "DefaultProvider": "Redis",
    "Providers": [ "Redis", "MemoryCache" ],
    "Redis": {
      "DefaultDatabase": 0,
      "ConnectionString": "172.30.62.107:6379",
      "InstanceName": "FlexCoreApp",
      "AbortOnConnectFail": false,
      "ConnectTimeout": 5000,
      "SyncTimeout": 5000
    },
    "MemoryCache": {
      "SizeLimit": 1024,
      "CompactionPercentage": 0.5,
      "ExpirationScanFrequency": "00:05:00"
    }
  },
  "Logging": {
    "DefaultProvider": "Serilog",
    "Providers": [ "Console", "Log4Net", "Serilog" ],
    "Console": {
      "IncludeScopes": true,
      "LogLevel": {
        "Default": "Information",
        "System": "Warning",
        "Microsoft": "Warning"
      }
    },
    "Log4Net": {
      "ConfigFile": "log4net.config",
      "LogLevel": {
        "Default": "Debug"
      }
    },
    "Serilog": {
      "Using": [ "Console", "File" ],
      "MinimumLevel": {
        "Default": "Information",
        "Override": {
          "Microsoft": "Warning",
          "System": "Error"
        }
      },
      "WriteTo": [
        {
          "Name": "Console",
          "Args": {
            "outputTemplate": "{Timestamp:HH:mm:ss} [{Level}] {Message}{NewLine}{Exception}"
          }
        },
        {
          "Name": "File",
          "Args": {
            "path": "{LogFolder}/log-.txt",
            "rollingInterval": "Day"
          }
        }
      ]
    }
  },
  "SecuritySettings": {
    "DefaultProvider": "JWT",
    "Providers": [ "JWT", "OAuth" ],
    "JWT": {
      "SecretKey": "your_super_secret_key_here",
      "Issuer": "FlexCoreApp",
      "Audience": "FlexCoreUsers",
      "ExpiryMinutes": 120
    },
    "OAuth": {
      "Google": {
        "ClientId": "your_google_client_id",
        "ClientSecret": "your_google_secret"
      },
      "Facebook": {
        "ClientId": "your_facebook_app_id",
        "ClientSecret": "your_facebook_app_secret"
      }
    }
  }
}